# EditorConfig settings (https://EditorConfig.org)

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.{md,yml,yaml}]
indent_style = space
indent_size = 4

# HTML, CSS, JavaScript
[*.{html,css,js}]
indent_style = space
indent_size = 4

# JSON
[*.json]
indent_style = space
indent_size = 2
